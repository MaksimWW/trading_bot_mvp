# =================================
# ПЕРЕМЕННЫЕ ОКРУЖЕНИЯ ДЛЯ ТОРГОВОГО БОТА
# =================================

# Telegram Bot API
TELEGRAM_TOKEN=your_telegram_bot_token_here

# Tinkoff Invest API
TINKOFF_TOKEN=your_tinkoff_api_token_here
TINKOFF_ENVIRONMENT=sandbox

# OpenAI API для анализа новостей
OPENAI_API_KEY=your_openai_api_key_here

# Настройки базы данных
DATABASE_URL=sqlite:///data/trading_bot.db

# Настройки логирования
LOG_LEVEL=INFO
LOG_FILE=logs/trading_bot.log

# Настройки риск-менеджмента
MAX_POSITION_SIZE=0.05
MAX_DAILY_LOSS=0.03
MAX_DAILY_TRADES=5
DEFAULT_STOP_LOSS=0.07
DEFAULT_TAKE_PROFIT=0.10

# Торговые часы (МСК)
MARKET_OPEN=10:00
MARKET_CLOSE=19:00
FORCE_CLOSE_TIME=18:50

# Режим работы
DEBUG_MODE=True
DRY_RUN=True
